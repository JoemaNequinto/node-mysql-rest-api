{
  "source": "src",
  "destination": "docs/source",
  "includes": ["\\.js$"],
  "excludes": ["\\.config\\.js$"],
  "plugins": [
    {
      "name": "esdoc-standard-plugin",
      "option": {
        "lint": {
          "enable": true
        },
        "coverage": {
          "enable": true
        },
        "accessor": {
          "access": ["public", "protected", "private"],
          "autoPrivate": true
        },
        "undocumentIdentifier": {
          "enable": true
        },
        "unexportedIdentifier": {
          "enable": false
        },
        "typeInference": {
          "enable": true
        },
        "test": {
          "source": "src/api/",
          "interfaces": ["describe", "it", "context", "suite", "test"],
          "includes": ["(spec|Spec|test|Test)\\.js$"],
          "excludes": ["\\.config\\.js$"]
        }
      }
    }
  ]
}